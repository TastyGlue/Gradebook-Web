@inherits LayoutComponentBase


<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@if (UserStateContainer.IsPopulated)
{
<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="4">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="@ToggleDrawer" Edge="Edge.Start" Color="Color.Inherit" />
        <MudText Typo="Typo.h6">School Diary</MudText>
    </MudAppBar>

        <MudDrawer @bind-Open="_drawerOpen" Anchor="Anchor.Left" Elevation="4" Variant="DrawerVariant.Responsive" Class="drawer-full justify-space-between">
            <div class="nav-grid">
                <span><MudIcon Icon="@Icons.Material.Filled.Dashboard"/><MudNavLink Href="" Match="NavLinkMatch.All">Dashboard</MudNavLink></span>
                <span><MudIcon Icon="@Icons.Material.Filled.Assignment" /><MudNavLink Href="assignments">Assignments</MudNavLink></span>
                <span><MudIcon Icon="@Icons.Material.Filled.CalendarToday" /><MudNavLink Href="calendar">Calendar</MudNavLink></span>
                <span><MudIcon Icon="@Icons.Material.Filled.Grade" /><MudNavLink Href="grades">Grades</MudNavLink></span>
                <span><MudIcon Icon="@Icons.Material.Filled.CheckCircle" /><MudNavLink Href="attendance">Attendance</MudNavLink></span>
                <span><MudIcon Icon="@Icons.Material.Filled.Message" /><MudNavLink Href="messages">Messages</MudNavLink></span>
                <span><MudIcon Icon="@Icons.Material.Filled.Settings" /><MudNavLink Href="settings">Settings</MudNavLink></span>
            </div>
        </MudDrawer>




        <MudMainContent>
            @Body
        </MudMainContent>

    </MudLayout>

@code {
    private bool _drawerOpen = true;

    void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}


